<h1>Burgers!</h1>

<p>Eat Da Burger</p>

<!-- Pass in data from server.js -->
<ul>
    {{#each burger}}
    <li>
        <p><span class="label"></span> {{this.burger}}</p>
        <button data-id="{{this.id}}" class="delquote">Devour It!</button>
    </li>
    {{/each}}
</ul>

<h2>Add a Burger</h2>

<form class="create-form">

    <div class="form-group">
        <label for="auth">Burger:</label>
        <input type="text" id="newBurg" name="burger">
    </div>

    <div class="form-group">
        <label for="quo">Description:</label>
        <textarea id="quo" name="quote" rows="8" cols="40"></textarea>
    </div>

    <button type="submit">Add Burger</button>
</form>
